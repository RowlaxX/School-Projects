<Page x:Class="BDD.User.BasketPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BDD.User"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BasketPage">

    <Grid Background="#FFB0DEC1">

        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="Panier" FontSize="20"/>

        <ListBox Grid.Row="1" x:Name="MyList" Background="#FFB0DEC1" HorizontalContentAlignment="Stretch"/>

        <Grid Grid.Row="2">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" x:Name="ButtonClear" Width="120" HorizontalAlignment="Right" Margin="5,5,20,5" Content="Vider"/>
            <Button Grid.Column="1" x:Name="ButtonOrder" Width="120" HorizontalAlignment="Left" Margin="20,5,5,5" Content="Commander"/>
        </Grid>
    </Grid>
</Page>
