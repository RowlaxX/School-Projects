<UserControl x:Class="BDD.UI.RelationPickerItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BDD.UI"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="200">
    <Grid Height="30">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="0" x:Name="MyText" VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
        <TextBox Grid.Column="1" Name="MyEdit" Margin="0,5,5,5" VerticalContentAlignment="Center" HorizontalContentAlignment="Left"/>
    </Grid>
</UserControl>
