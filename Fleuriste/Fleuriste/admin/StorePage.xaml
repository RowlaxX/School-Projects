<Page x:Class="BDD.Admin.StorePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BDD.Admin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StorePage">

    <Grid Background="#FFB0DEC1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <ListBox x:Name="ListStore" Grid.Column="0" Margin="5" HorizontalContentAlignment="Stretch"/>
        <Button x:Name="AddStore" Grid.Column="0" Grid.Row="1" Content="Nouveau Magasin" Margin="5"/>
        <ListBox x:Name="ListItem" Grid.Column="2" Margin="5" HorizontalContentAlignment="Stretch"/>
        <Button x:Name="AddItem" Grid.Column="2" Grid.Row="1" Content="Nouveau Item" Margin="5"/>
    </Grid>
</Page>
